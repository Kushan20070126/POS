<Window x:Class="Pos_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pos_System"
        mc:Ignorable="d"
        Title="Login - POS System" Height="600" Width="400" WindowStartupLocation="CenterScreen">

    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="30">

            <!-- Header -->
            <Border Background="DarkOrange" CornerRadius="10" Padding="15" Margin="0,0,0,20">
                <TextBlock Text="🍔 Welcome Food Pos" 
                          Foreground="White" 
                          FontSize="24" 
                          FontWeight="Bold"
                          HorizontalAlignment="Center"/>
            </Border>

            <TextBlock Text="Login to System" 
                      FontSize="18" 
                      FontWeight="SemiBold"
                      Foreground="#333"
                      HorizontalAlignment="Center" 
                      Margin="0,0,0,20"/>

            <!-- Username -->
            <TextBlock Text="Username" FontWeight="SemiBold" Foreground="#666" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUsername" 
                    Height="40"
                    BorderThickness="0,0,0,2"
                    BorderBrush="Orange"
                    Padding="10"
                    FontSize="14"
                    Background="Transparent"/>

            <!-- Password -->
            <TextBlock Text="Password" FontWeight="SemiBold" Foreground="#666" Margin="0,15,0,5"/>
            <PasswordBox x:Name="txtPassword" 
                        Height="40"
                        BorderThickness="0,0,0,2"
                        BorderBrush="Orange"
                        Padding="10"
                        FontSize="14"
                        Background="Transparent"/>

            <!-- Remember Me -->
            <CheckBox x:Name="chkRememberMe" 
                     Content="Remember Me" 
                     Margin="0,15,0,10"
                     Foreground="#666"/>

            <!-- Login Button -->
            <Button x:Name="btnLogin" 
                   Content="LOGIN" 
                   Height="45"
                   Background="DarkOrange"
                   Foreground="White"
                   BorderThickness="0"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Margin="0,10,0,0"
                   Cursor="Hand"/>

            <!-- Status Message -->
            <TextBlock x:Name="txtStatus" 
                      Foreground="Red"
                      HorizontalAlignment="Center" 
                      FontSize="12"
                      TextWrapping="Wrap" 
                      Margin="0,10,0,0"
                      Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>
